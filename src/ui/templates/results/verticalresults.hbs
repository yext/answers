{{#if isSearchComplete}}
  {{#if showNoResults}}
    {{> noResults}}
  {{/if}}
  {{#if resultsPresent}}
    {{> results}}
  {{/if}}
{{/if}}

{{#*inline "noResults"}}
  {{#if useLegacyNoResults}}
    {{> results/noresults}}
  {{else}}
    <div class="yxt-Results-alternativeVerticals"
          data-component="AlternativeVerticals"></div>
  {{/if}}
{{/inline}}

{{#*inline "results"}}
  <section class="yxt-Results yxt-Results--{{_config.modifier}}">
    {{#if _config.isUniversal}}
      {{> results/resultssectionheader}}
    {{else}}
      {{#if showResultsHeader}}
        <div data-component="ResultsHeader" data-opts='{{json _config.resultsHeaderOpts}}'></div>
      {{/if}}
    {{/if}}
    {{#if _config.includeMap}}
      <div class="yxt-Results-map"
            data-component="Map"
            data-prop="map">
      </div>
    {{/if}}
    <div class="yxt-Results-items js-yxt-Results-items{{#if numColumns}} yxt-Results-items--{{numColumns}}{{/if}}">
      {{#each results}}
        <div class="yxt-Card{{#if ../_config.isUniversal}} yxt-Card--universal{{/if}}"
          data-component="Card"
          data-opts='{ "_index": {{@index}} }'>
        </div>
      {{/each}}
      {{#each placeholders}}
        <div class="yxt-Card-placeholder" aria-hidden="true"></div>
      {{/each}}
    </div>
  </section>
{{/inline}}
