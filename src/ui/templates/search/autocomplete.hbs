{{#if sections}}
  <div class="yext-autocomplete-container">
    {{assign 'currentSelected' sectionIndex resultIndex}}
    {{#if promptHeader}}
      <ul class="yext-autocomplete-results">
        <li class="yext-no-select yext-autocomplete-prompt-header">
          {{promptHeader}}
        </li>
      </ul>
    {{/if}}
    {{#each sections}}
      <ul class="yext-autocomplete-results">
      {{#if label}}
        <li class="yext-no-select yext-autocomplete-header">{{label}}</li>
      {{/if}}
      {{#each results}}
        {{assign 'currentIndex' @../index @index}}
        <li class="js-yext-autocomplete-option yext-autocomplete-option {{#ifeq ../../currentSelected ../../currentIndex}}yext-selected{{/ifeq}}"
            data-value="{{value}}"
            data-short="{{shortValue}}"
            data-filter='{"key": "{{{key}}}", "value": "{{{value}}}", "filter": "{{{json filter}}}"}'>
            {{{highlightedValue}}}
        </li>
      {{/each}}
      </ul>
    {{/each}}
  </div>
{{/if}}