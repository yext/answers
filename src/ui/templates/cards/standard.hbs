<div class="yxt-StandardCard">
  {{#if _config.image}}
    <div class="yxt-StandardCard-imgWrapper">
      <img src="{{_config.image}}">
    </div>
  {{/if}}
  <div class="yxt-StandardCard-wrapper">
    {{#if _config.title}}
      <a class="yxt-StandardCard-title"
        {{#if _config.url}} 
          href="{{_config.url}}"
          target={{#if _config.newWindow}}"_blank" rel="noopener noreferrer nofollow"{{else}}"_self"{{/if}}
        {{/if}}
      >
        {{_config.title}}
      </a>
    {{/if}}
    {{#if _config.subtitle}}  
      <div class="yxt-StandardCard-subtitle">
        {{_config.subtitle}}
      </div>
    {{/if}}
    <div class="yxt-StandardCard-content">
      {{#if details}}
        <div class="yxt-StandardCard-details">
          {{details}}
          {{#if _config.showToggle}}
            <button class="yxt-StandardCard-toggle">
              {{#if hideExcessDetails}}
                {{_config.showMoreText}}
                <span class="yxt-Icons-collapseDown yxt-Icons-sm"
                  data-component="IconComponent"
                  data-opts='{ "iconName": "chevron" }'></span>
              {{else}} 
                {{_config.showLessText}}
                <span class="yxt-Icons-collapseUp yxt-Icons-sm"
                  data-component="IconComponent"
                  data-opts='{ "iconName": "chevron" }'></span>
              {{/if}}
            </button>
          {{/if}}
        </div>
      {{/if}}
      <div class="yxt-StandardCard-ctas" data-component="CTACollection" data-prop="result"></div>
    </div>
  </div>
</div>
